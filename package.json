{
  "name": "add-matchers",
  "description": "Write useful test matchers compatible with Jest and Jasmine.",
  "version": "0.6.2",
  "author": "Jamie Mason (https://github.com/JamieMason)",
  "bugs": "https://github.com/JamieMason/add-matchers/issues",
  "devDependencies": {
    "@types/jasmine-v1": "npm:@types/jasmine@1.3.3",
    "@types/jasmine-v2": "npm:@types/jasmine@2.8.14",
    "@types/jest": "25.2.1",
    "@types/node": "13.13.4",
    "jasmine": "3.5.0",
    "jasmine-node": "3.0.0",
    "jest": "26.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "ts-jest": "25.4.0",
    "tslint": "6.1.2",
    "typescript": "3.8.3"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/JamieMason/add-matchers",
  "keywords": [
    "BDD",
    "TDD",
    "jasmine",
    "testing"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "JamieMason/add-matchers.git",
  "scripts": {
    "build": "tsc --project .",
    "format": "prettier --write './src/**/*.ts' './test/**/*.js'",
    "lint": "tslint --fix --project ./tsconfig.json",
    "prebuild": "rimraf ./dist",
    "prelint": "npm run format",
    "prepack": "npm run build",
    "test": "run-p 'test:*'",
    "test:jasmine-v1": "jasmine-node ./test/e2e.spec.js",
    "test:jasmine-v2": "jasmine JASMINE_CONFIG_PATH=jasmine.json",
    "test:jest": "jest"
  }
}
